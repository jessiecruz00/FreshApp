# App
APP_NAME=FreshApp API
DEBUG=false
API_V1_PREFIX=/api/v1

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=freshapp

# JWT (use: openssl rand -hex 32)
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
VERIFICATION_TOKEN_EXPIRE_MINUTES=60
INVITE_TOKEN_EXPIRE_MINUTES=1440

# Google OAuth (create at https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# SendGrid (https://sendgrid.com)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_FROM_NAME=FreshApp

# Frontend URL (for verification/invite links)
FRONTEND_URL=http://localhost:3000

# Super admin (login with this email + password to get admin access; user is created if missing)
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change-me-secure-password
SUPER_ADMIN_NAME=Super Admin
